@model AcademicLife.Models.CurricularGradeViewModels.CurricularGradeViewModel

@{
    ViewData["Title"] = "AddSubject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adicionar Disciplina</h2>

<h4>CurricularGrade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSubject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CurricularGradeId" />
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <select class="form-control" asp-for="SubjectId">
                    @foreach (var m in Model.Subjects)
                    {
                        <option id="@m.Id" value="@m.Id">@m.Code | @m.Name | @m.InstituteProvider.Code</option>
                    }
                </select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

