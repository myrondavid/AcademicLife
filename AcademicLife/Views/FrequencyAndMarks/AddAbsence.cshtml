@model AcademicLife.Models.StudentClassroomViewModels.AddAbsenceViewModel

@{
    ViewData["Title"] = "Adicionar Falta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adicionar Falta</h2>

<h4>Adiciona uma falta nesta turma</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAbsence">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentClassroomId" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AbsenceDate" class="control-label"></label>
                <input asp-for="AbsenceDate" class="form-control" />
                <span asp-validation-for="AbsenceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar Falta" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

