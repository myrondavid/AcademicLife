@model IEnumerable<AcademicLife.Models.StudentClassroom>

@{
    ViewData["Title"] = "Minhas Turmas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Minhas Turmas</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Se cadastrar em nova turma</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Turma
            </th>
            <th>
                Descrição
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Classroom.Code | @item.Classroom.ClassSubject.Name | @item.Classroom.InstituteProvider.Code
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default">Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default">Ver Detalhes</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
