@model MarkCalculatorViewModel

@{
    ViewData["Title"] = "Caluladora de Nota";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Calculadora de Nota</h2>
<h4>Calcule a nota necessária para ir poder ir pra final.</h4>
<p>Obs.: Válido para as <a href="http://www.ichca.ufal.br/graduacao/biblioteconomia/v1/wp-content/uploads/20091214-calculo-nota-prova-final-aprovacao.pdf">regras da UFAL</a></p>
<form asp-action="Index">
    <label>
        Nota na AB1: <input class="form-control" asp-for="Ab1" />
    </label>
    <label>
        Nota na AB2: <input class="form-control" asp-for="Ab2" />
    </label>
    <label>
        Quanto deseja ficar na média final(min 5.5/max 8.14):
        <input class="form-control" asp-for="DesiredFinalMark"/>
    </label>
    <input type="submit" class="btn btn-default" value="Calcular"/>
</form>

@if (Model != null)
{
    <div class="panel panel-default">
        <div class="panel-heading clearfix">
            <h3 class="panel-title pull-left">Nota necessária para passar com <span class="text-primary">@Model.DesiredFinalMark</span> de média:</h3>
        </div>
        <div class="panel-body">
            <h2 class="danger text-center">@Model.FinalMark</h2>
        </div>
    </div>
}

