@model AcademicLife.Models.StudentCourseViewModels.AddCourseViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastre-se em um curso</h2>

<h4>Meus Cursos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="StudentRegistration" class="control-label"></label>
                <input asp-for="StudentRegistration" class="form-control" />
                <span asp-validation-for="StudentRegistration" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <select id="selectedCourse" asp-for="CourseId" class="form-control">
                    @foreach (var m in Model.Courses)
                    {
                        <option id="@m.Id" value="@m.Id">@m.Code | @m.Name</option>
                    }
                </select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar-se" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Voltar</a>
</div>

