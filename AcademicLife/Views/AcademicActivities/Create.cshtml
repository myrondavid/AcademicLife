@model AcademicLife.Models.AcademicActivityViewModels.AcademicActivityViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>AcademicActivity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentClassroomId" value="@Model.StudentClassroomId"/>
            <div class="form-group">
                <label asp-for="MarkId" class="control-label"></label>
                <select asp-for="MarkId" class="form-control">
                    @foreach (var m in Model.Marks)
                    {
                        <option id="@m.Id" value="@m.Id">@m.Name</option>
                    }
                </select>
                <span asp-validation-for="MarkId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pontuation" class="control-label"></label>
                <input asp-for="Pontuation" class="form-control" />
                <span asp-validation-for="Pontuation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

