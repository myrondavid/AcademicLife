@{
    ViewData["Title"] = "Home Page";
}

<div class="panel panel-default bootcards-summary">
    <div class="panel-heading">
        <h3 class="panel-title">Menu Principal</h3>
    </div>
    <div class="panel-body">
        <div class="row">

            <div class="col-xs-6 col-sm-4">
                <a class="bootcards-summary-item" href="/studentcourses">
                    <i class="fa fa-3x glyphicon glyphicon-education"></i>
                    <h4>Meus Cursos <span class="label label-info">@ViewData["qntCourses"]</span></h4>
                </a>
            </div>

            <div class="col-xs-6 col-sm-4">
                <a class="bootcards-summary-item" href="/studentclassrooms">
                    <i class="fa fa-3x glyphicon glyphicon-list-alt"></i>
                    <h4>Minhas Turmas<span class="label label-info">@ViewData["qntClassrooms"]</span></h4>
                </a>
            </div>

            <div class="col-xs-6 col-sm-4">
                <a class="bootcards-summary-item" href="/studentsubjects">
                    <i class="fa fa-3x glyphicon glyphicon-book"></i>
                    <h4>Minhas Disciplinas<span class="label label-info">@ViewData["qntSubjects"]</span></h4>
                </a>
            </div>

            <div class="col-xs-6 col-sm-4">
                <a class="bootcards-summary-item" href="/frequencyandmarks">
                    <i class="fa fa-3x glyphicon glyphicon-stats"></i>
                    <h4><span class="label label-danger">@ViewData["qntClassroomsBadMarks"]</span>Notas e Frequência</h4>
                </a>
            </div>

            <div class="col-xs-6 col-sm-4">
                <a class="bootcards-summary-item" href="/academicactivities">
                    <i class="fa fa-3x glyphicon glyphicon-tasks"></i>
                    <h4>Atividades <span class="label label-info">@ViewData["qntActivities"]</span></h4>
                </a>
            </div>

            <div class="col-xs-6 col-sm-4">
                <a class="bootcards-summary-item" href="/markcalculator">
                    <i class="fa fa-3x glyphicon glyphicon-cog"></i>
                    <h4>Calculadora de Nota</h4>
                </a>
            </div>
        </div>
    </div>

</div>

@await Html.PartialAsync("_CalendarPartial")

