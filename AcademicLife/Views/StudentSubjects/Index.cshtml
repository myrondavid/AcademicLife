@model IEnumerable<AcademicLife.Models.StudentSubject>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Minhas Disciplinas</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Cadastrar nova disciplina</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Descrição
            </th>
            <th>
                Dificuldade
            </th>
            <th>
                Foi Paga?
            </th>
            <th>
                Disciplina
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubjectDifficult)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsConcluded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default">Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-default">Ver Detalhes</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
